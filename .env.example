# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key

# Storage provider flags
NEXT_PUBLIC_ENABLE_SUPABASE=true
NEXT_PUBLIC_DISABLE_FALLBACK=false
NEXT_PUBLIC_ENABLE_OFFLINE_CACHE=true

# Optional service role key for server-side scripts
SUPABASE_SERVICE_KEY=your-service-role-key

# Application Configuration
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Sentry Configuration (for error tracking and monitoring)
# Get these values from https://sentry.io/
# 1. Create a new project in Sentry
# 2. Get your DSN from Settings > Projects > Your Project > Client Keys
# 3. Create an auth token from Settings > Account > API > Auth Tokens
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_DEBUG=false

# Monitoring Configuration
# Optional: Set this to protect your monitoring endpoints
MONITORING_API_KEY=your-secret-monitoring-key
NEXT_PUBLIC_MONITORING_API_KEY=your-public-monitoring-key

# Admin Dashboard Protection
# Set this to protect /admin/monitoring in production
# Users can access with: /admin/monitoring?key=your-secret-key
ADMIN_ACCESS_KEY=your-secure-admin-key-here

# Optional: Custom analytics endpoint for Web Vitals
NEXT_PUBLIC_ANALYTICS_ENDPOINT=

